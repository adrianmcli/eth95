{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2015", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "exclude": ["./src/app"],
  "include": ["./src", "test/**/*.test.ts"]
}
